@model IEnumerable<HMS.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviewtext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviewdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviewtext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviewdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.Guestid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Roomid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Serviceid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Reviewid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Reviewid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Reviewid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
